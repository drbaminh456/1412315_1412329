<div class="main-content-wrapper section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <!-- ============= Post Content Area Start ============= -->
            <div class="col-12 col-lg-8">
                <div class="post-content-area mb-100">
                    <!-- Catagory Area -->

                    <div class="world-catagory-area">

                        <h2 class="title mb-70">Articles in Category: {{category}}</h2>
                        <ul id="myList">
                            {{#each newsS}}
                            <li style="display: none">
                                <div class="single-blog-post post-style-4 d-flex align-items-center">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <img src="/stylesheets/images/{{Thumbnail_image}}" alt="">
                                    </div>
                                    <!-- Post Content -->
                                    <div class="post-content">
                                        <a href="../../{{news_id}}" class="headline">
                                            <h5>{{Title}}</h5>
                                        </a>
                                        <p>{{Summary}}</p>
                                        <!-- Post Meta -->
                                        <div class="post-meta">
                                            <p><a href="#" class="post-author">{{nickname}}</a> on <a href="#"
                                                    class="post-date">{{Date}}</a></p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                        <ul class="pagination pagination_type1">
                            <li class="pagination__item">
                                <a href="?page={{pageb}}" class="pagination__number">←
                                    <span class="pagination__control pagination__control_prev">prev</span>
                                </a>
                            </li>
                            {{#each page_numbers}}
                            {{#if isCurPage}}
                            <li class="pagination__item"><a href="?page={{value}}">
                                    <span class="pagination__number pagination__number_active">{{value}}</span></a>
                            </li>
                            {{else}}
                            <li class="pagination__item"><a href="?page={{value}}">
                                    <span class="pagination__number pagination__number_active">{{value}}</span></a>
                            </li>
                            {{/if}}
                            {{/each}}
                            <li class="pagination__item">
                                <a href="?page={{pagea}}" class="pagination__number">
                                    <span class="pagination__control pagination__control_next">next</span>→</a>
                            </li>
                        </ul>
                        <!-- Load More btn -->
                        <div class="row">
                            <div class="col-12">
                                <div class="load-more-btn mt-50 text-center float-left">
                                    <a class="btn world-btn" id="loadLess">Previous Page</a>
                                </div>
                                <div class="load-more-btn mt-50 text-center float-right">
                                    <a class="btn world-btn" id="loadMore">Next Page</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- ========== Sidebar Area ========== -->
            <div class="col-12 col-md-8 col-lg-4">
                <div class="post-sidebar-area">
                    <!-- Widget Area -->
                    <div class="sidebar-widget-area">
                        <h5 class="title">About This Project</h5>
                        <div class="widget-content">
                            <p>Developed by 1412315 and 1412329 as our final (hope so) project to graduate</p>
                        </div>
                    </div>
                    <!-- Widget Area -->
                    <div class="sidebar-widget-area">
                        <h5 class="title">Top Views Article</h5>
                        <div class="widget-content">
                            <!-- Single Blog Post -->
                            {{#each topStoS}}
                            <div class="single-blog-post post-style-2 d-flex align-items-center widget-post">
                                <!-- Post Thumbnail -->
                                <div class="post-thumbnail">
                                    <img src="/stylesheets/images/{{Thumbnail_image}}" alt="">
                                </div>
                                <!-- Post Content -->
                                <div class="post-content">
                                    <a href="../../{{news_id}}" class="headline">
                                        <h5 class="mb-0">{{Title}}</h5>
                                    </a>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <!-- Widget Area -->
                    <div class="sidebar-widget-area">
                        <h5 class="title">Stay Connected</h5>
                        <div class="widget-content">
                            <div class="social-area d-flex justify-content-between">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-vimeo"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-google"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Widget Area -->
                    <div class="sidebar-widget-area">
                        <h5 class="title">Today’s Pick</h5>
                        <div class="widget-content">
                            <!-- Single Blog Post -->
                            <div class="single-blog-post todays-pick">
                                <!-- Post Thumbnail -->
                                {{#each ranStoS}}
                                <div class="post-thumbnail">
                                    <img src="/stylesheets/images/{{Thumbnail_image}}" alt="">
                                </div>
                                <!-- Post Content -->
                                <div class="post-content px-0 pb-0">
                                    <a href="../../{{news_id}}" class="headline">
                                        <h5>{{Title}}</h5>
                                    </a>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Load More btn -->
    </div>
</div>

<script>
    $(document).ready(function () {
        size_li = $("#myList li").size();

        x = 9;
        $('#myList li:lt(' + x + ')').show();
        //$('#myList li:lt(' + (size_li - x) + ')').hide();
        //console.log($('#myList li:lt(' + x + ')'))
        $('#loadMore').click(function () {
            x = (x + 5 <= size_li) ? x + 5 : size_li;
            $('#myList li:lt(' + x + ')').show();
            x == size_li ? $('#loadMore').hide() : void (0);
        });
        $('#loadLess').click(function () {
            x = (x - 5 < 0) ? 9 : x - 5;
            $('#myList li').not(':lt(' + x + ')').hide();
        });
    }); 
</script>